<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.avjindersinghsekhon.minimaltodo.pesanan.DetailKontakActivity"
    android:padding="8dp">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Edit Pesanan"
        android:textColor="@color/accent"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvNama"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="128dp"
        android:text="Nama Pemesan :"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNama"
        android:layout_width="339dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:hint=""
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvNama" />

    <TextView
        android:id="@+id/txvNomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="Detail Pemesanan :"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNama" />

    <EditText
        android:id="@+id/txtNomor"
        android:layout_width="334dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:hint=""
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvNomor" />

    <Button
        android:id="@+id/btnUbah"
        android:layout_width="346dp"
        android:layout_height="52dp"
        android:layout_marginTop="52dp"
        android:background="@color/light_primary_color"
        android:onClick="button_onClick"
        android:text="Ubah"
        android:textColor="@color/primary_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNomor"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btnHapus"
        android:layout_width="346dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_primary_color"
        android:onClick="button_onClick"
        android:text="Hapus"
        android:textColor="@color/primary_light"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUbah"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btnKembali"
        android:layout_width="346dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_primary_color"
        android:onClick="button_onClick"
        android:text="Kembali"
        android:textColor="@color/primary_light"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHapus"
        tools:ignore="OnClick" />


</android.support.constraint.ConstraintLayout>